generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Decision {
  id                String     @id @default(uuid())
  title             String
  rawContext        String
  structuredContext Json
  outcome           Json?
  analyses          Analysis[]
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
}

model Analysis {
  id         String   @id @default(uuid())
  decisionId String
  status     String
  results    Json
  confidence Float
  modelUsed  String
  createdAt  DateTime @default(now())

  decision Decision @relation(fields: [decisionId], references: [id])
}
